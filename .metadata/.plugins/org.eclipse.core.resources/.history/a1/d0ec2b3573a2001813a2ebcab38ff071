package br.com.transportadoraBR.edgeservice;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.cloud.client.circuitbreaker.EnableCircuitBreaker;
import org.springframework.cloud.client.discovery.EnableDiscoveryClient;
import org.springframework.cloud.netflix.zuul.EnableZuulProxy;
import org.springframework.cloud.netflix.zuul.filters.route.FallbackProvider;
import org.springframework.cloud.openfeign.EnableFeignClients;
import org.springframework.context.annotation.Bean;
import org.springframework.http.HttpStatus;

import br.com.transportadoraBR.edgeservice.zullfallback.GenericZuulFallbackProvider;

@EnableFeignClients
@EnableCircuitBreaker
@EnableDiscoveryClient
@EnableZuulProxy
@SpringBootApplication
public class EdgeServiceApplication {

	public static void main(String[] args) {
		SpringApplication.run(EdgeServiceApplication.class, args);
	}
	
	@Bean
	public FallbackProvider route1ZuulFallbackProvider() {
		GenericZuulFallbackProvider route1ZuulFallback = new GenericZuulFallbackProvider();
		route1ZuulFallback.setRoute("route1");
		return route1ZuulFallback;
	}
	
	@Bean
	public FallbackProvider route2ZuulFallbackProvider() {
		GenericZuulFallbackProvider route2ZuulFallback = new GenericZuulFallbackProvider();
		route2ZuulFallback.setRoute("route2");
		route2ZuulFallback.setRawStatusCode(200);
        route2ZuulFallback.setStatusCode(HttpStatus.OK);
        route2ZuulFallback.setResponseBody("We are little busy. Comeback After Sometime");
        return route2ZuulFallback;
	}
}
